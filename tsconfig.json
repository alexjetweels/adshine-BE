{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@assets/*": [
        "assets/*"
      ],
      "@lib/modules": [
        "libs/modules/src"
      ],
      "@lib/modules/*": [
        "libs/modules/src/*"
      ],
      "@lib/utils": [
        "libs/utils/src"
      ],
      "@lib/utils/*": [
        "libs/utils/src/*"
      ]
    }
  }
}